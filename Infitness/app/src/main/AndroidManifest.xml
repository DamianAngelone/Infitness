<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comdamianangeloneinfitness.httpsgithub.infitness">

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-feature
            android:name="@string/step_detector"
            android:required="false" />
        <uses-feature
            android:name="@string/step_counter"
            android:required="false" />

        <activity
            android:name=".FoodTracker"
            android:label="@string/Food_Tracker" />
        <activity
            android:name=".Login"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".User"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".FoodTrackerOpener"
            android:label="@string/title_activity_food_tracker_opener"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".FitnessActivity" />
        <activity android:name=".ExerciseHistory" />
        <activity android:name=".ExerciseDataBase" />
        <activity android:name=".ExerciseTrend"></activity>
    </application>

</manifest>